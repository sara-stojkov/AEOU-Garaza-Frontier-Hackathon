{
  "name": "Google Search Monitor",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Monitors Google search results and sends data to a local server if permission is granted.",
  "permissions": ["storage", "tabs", "identity", "identity.email"],
  "host_permissions": [
    "https://www.google.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
  {
    "matches": ["*://www.google.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle",
    "all_frames": false
  }
],
  "action": { "default_popup": "popup.html" },
  "icons": { "128": "default_icon.png" }
}
